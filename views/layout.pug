doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title El Lector Voraz
    link(rel="stylesheet", href="/styles.css")
  body
    header
      h1 El Lector Voraz
      nav
        ul
          if user
            if user.role === 'admin'
              li: a(href="/products") Catálogo de Libros
              li: a(href="/cafes") Cafetería
              li: a(href="/clients") Clientes
              li: a(href="/sales") Ventas
              li: a(href="/users") Usuarios
            else
              li: a(href="/products") Catálogo de Libros
              li: a(href="/cafes") Cafetería
            li: a(href="/logout") Cerrar sesión (#{user.email})
          else
            li: a(href="/login") Iniciar sesión
    main
      block content
    footer
      p © #{new Date().getFullYear()} El Lector Voraz
